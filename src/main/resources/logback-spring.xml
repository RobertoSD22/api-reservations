<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %date %highlight(%-5level) %yellow([%thread]) %cyan(%logger{10}) [%file : %line] %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="com.vuelos.reservations" level="DEBUG" />
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>